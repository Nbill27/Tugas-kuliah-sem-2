#include <iostream>

int main() {
    // Deklarasi variabel
    int nilai;
    bool nilai_boolean;

    // Input nilai
    std::cout << "Masukkan nilai (0 atau 1): ";
    std::cin >> nilai;

    // Mengubah nilai menjadi Boolean
    if (nilai == 1) {
        nilai_boolean = true;
    } else if (nilai == 0) {
        nilai_boolean = false;
    } else {
        std::cout << "Masukkan tidak valid." << std::endl;
        return 1;
    }

    // Output nilai Boolean
    std::cout << "Nilai Boolean: " << std::boolalpha << nilai_boolean << std::endl;

    return 0;
}
